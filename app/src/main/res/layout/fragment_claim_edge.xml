<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_claim_edge"
    android:background="@color/colorEdgeWhite"
    android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Claim!"
            android:id="@+id/submit_claim_button"
            />

        <TextView
            android:text="Train Cards"
            android:id="@+id/header_for_trainCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/submit_claim_button"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ClaimTrainCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_for_trainCards"
            android:orientation="horizontal">

        </android.support.v7.widget.RecyclerView>

</RelativeLayout>